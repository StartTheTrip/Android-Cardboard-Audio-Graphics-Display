<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/end" >

    <ImageView
        android:id="@+id/action_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/play" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="THIS WILL ACCESS YOUR DEVICE'S STORAGE AS STATED ON INSTALLATION."
        android:textColor="#FFFFFF99"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="CARDBOARD VISUALIZER...NOW LOADING..."
        android:textColor="#FFFFFF99"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>